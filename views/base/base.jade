include ../includes/mixins


doctype html
html(xmlns='http://www.w3.org/1999/xhtml', lang='es')
	head
		block title
			title El gorrión de París - #{title}

		block metas
			meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
			meta(http-equiv='X-UA-Compatible', content='IE=edge')
			meta(http-equiv='content-language', content='es')
			+meta('viewport', 'width=device-width, initial-scale=1.0')
			-keywords = keywords || []
			//- Estos keywords estan en todas, pero cada pagina puede poner mas al principio
			-keywords.push('gorrion','paris','eventos','fiestas','decoracion','diseño','ambientacion','fotolibro','toppins')
			+meta('keywords', keywords.join(','))
			//- Si no se define description en una pagina, se usa el title
			+meta('description', description || title)
			+meta('copyright', '2015 El gorrión de París')
			+meta('author', 'Nadia Presberg')
			+meta('language', 'es')

		block indexing
			+meta('robots', 'index, follow')

		block styles
			link(type='image/x-icon', rel='shortcut icon', href='/favicon.ico')
			+link('//fonts.googleapis.com/css?family=Arvo:400,700')
			+link('//fonts.googleapis.com/css?family=Amatic+SC:700')
			+link('//netdna.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min')
			+link('//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome')
			+link('shop-homepage')
			+link('style')
			
			// HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
			// WARNING: Respond.js doesn't work if you view the page via file://
			<!--[if lt IE 9]>
			+script('https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv')
			+script('https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min')
			<![endif]-->

	block body
		body
			include ../includes/topbar
			
			block content
			
			include ../includes/footer

			block scripts
				+script('//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min')
				+script('//netdna.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min')
				+script('gorrion')

