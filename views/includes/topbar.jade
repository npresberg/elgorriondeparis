nav.navbar#topbar
	.container
		.row
			.col-xs-6.col-xs-offset-3
				a.logo(href='/')
					img.img-responsive(src='/img/logo.png', alt='El gorrión de Paris')
		.row
			.col-xs-3
				a.presupuesto-link(href='#footer') PEDÍ TU 
					br
					img.img-responsive(src='/img/btn-presupuesto.png', alt='PRESUPUESTO')
			.col-xs-6
				ul.nav.nav-justified.navigation
					li.dropdown
						a.events(href="#" data-toggle="dropdown", class=activeIf(url, 'eventos')) Eventos 
							span.caret
						ul.events.dropdown-menu
							each event in events()
								li: a(href=event.url)= event.name
					li.separator
					li: a.services(href='/servicios', class=activeIf(url, 'servicios')) Servicios
					li.separator
					li: a.us(href='/nosotras', class=activeIf(url, 'nosotras')) Nosotras
					li.separator
					li: a.contact(href='#footer') Contacto
			.col-xs-3
				p.hidden-xs SEGUINOS EN
				ul.social
					li.facebook-link
						a(title='Facebook', href='https://www.facebook.com/elgorriondeparis', target='_blank')
							i.fa.fa-facebook-square.fa-2x

					


